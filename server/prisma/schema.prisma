model List {
  id    String @id @default(cuid())
  title String
  todos ToDo[] @relation("ListToDos")
}

model ToDo {
  id          String   @id @default(cuid())
  title       String
  description String
  dueDate     DateTime
  status      String
  priority    String
  list        List     @relation("ListToDos", fields: [listId], references: [id])
  listId      String
  ownerId     String
}

model Activity {
  id      String @id @default(cuid())
  ownerid String
  todoid  String
  text    String
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
