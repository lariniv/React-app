enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum ActivityType {
  MOVE
  ADD
  REMOVE
  EDIT
  RENAME
}

model Task {
  id          String       @id @default(cuid())
  name        String
  description String
  dueDate     DateTime
  priority    TaskPriority
  listId      String
  List        List         @relation(fields: [listId], references: [id])
}

model List {
  id       String @id @default(cuid())
  name     String
  tasks    Task[]
  owner_id String
}

model Activity {
  id           String       @id @default(uuid())
  date         DateTime     @default(now())
  taskId       String
  taskName     String
  sourceList   String?
  targetList   String?
  listName     String?
  initialValue String?
  changedValue String?
  editedField  String?
  type         ActivityType
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
